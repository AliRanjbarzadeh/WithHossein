<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorSecondary">#2962FF</item>
		<item name="colorError">#F44336</item>
		<item name="colorAccent">@color/colorAccent</item>

		<!--Remove default toolbar-->
		<item name="windowNoTitle">true</item>

		<item name="android:fontFamily">@font/app_font</item>
	</style>

	<style name="TextInputLayoutAppearance" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
		<!-- reference our hint & error styles -->
		<item name="hintTextAppearance">@style/HintText</item>
		<item name="errorTextAppearance">@style/ErrorText</item>
		<item name="boxStrokeColor">#616161</item>
		<item name="colorControlNormal">#000000</item>
		<item name="boxBackgroundColor">@color/transparent</item>
		<!--		<item name="boxBackgroundMode">outline</item>-->
	</style>

	<style name="ErrorText" parent="TextAppearance.AppCompat">
		<item name="android:textColor">#E53935</item>
		<item name="android:textSize">16sp</item>
	</style>

	<style name="HintText" parent="TextAppearance.AppCompat">
		<item name="android:textColor">#636363</item>
		<item name="android:textSize">14sp</item>
	</style>

</resources>
